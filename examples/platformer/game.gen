
type Vec2 = struct { x : i64, y : i64 };

type Game = struct {
  frame : i64
};

fun game_update(g : ptr Game, e : ptr Event) {
  // handle tick events
  if e.tag == tick_event_tag {
    g.frame = g.frame + 1;
  }
};

fun render_game(r : SdlRendererHandle, g : ptr Game) {
  draw_anim(r, 0, 0, ref king_run_anim, g.frame);
  draw_anim(r, 150, 150, ref pig_run_anim, g.frame);
};
